.popupContainer
  position fixed
  width 100%
  height 100%
  z-index 99
  display none
  transition all 0.5s
  &.show
    display block
    background rgba(36, 36, 36, 0.0)
    transition all 0.5s
    &.dark
      transition-delay 1s
      transition all 0.5s
      background rgba(36, 36, 36, 0.5)
.blocksPopup
  position fixed
  display none
  z-index 100
  width 100%
  height 100%
  max-width 1366px
  left 0
  right 0
  margin 0 auto
  &.show
    display block
  .Block
    overflow hidden
    overflow-y auto
    transition all 0.5s
    max-width 1366px
    margin 0 auto
    position fixed
    width 100%
    height 100%
    top 0
    will-change top
    left 0
    right 0
    transform-origin 0% 50%
    transform scaleY(0)
    +mq(0, 480px)
      overflow-y hidden
      top 2000px
      transform scaleY(1)
    &.show
      transition all 0.5s
      transform scaleY(0)
      +mq(0, 480px)
        top 2000px
        transform scaleY(1)
      &.open
        transform scaleY(1)
        +mq(0, 480px)
          transform scaleY(1)
          top 0
  .closePopup
    cursor pointer
    width 26px
    height 25px
    margin 12% 40px 40px auto
    opacity 1
    will-change opacity, margin, transform
    transition transform 0.4s 0s ease
    &:hover
      transition transform 0.4s 0s ease
      transform rotate(90deg)
    &.hide
      opacity 0
      margin 12% -200px 40px auto
      +mq(481px, 800px)
        margin 20% -200px 40px auto
      +mq(0, 480px)
        width 21px
        height 21px
        margin 20px 20px 20px auto
    +mq(481px, 800px)
      margin 20% 40px 40px auto
    +mq(0, 480px)
      width 21px
      height 21px
      margin 20px 20px 20px auto
    svg
      width 100%
      height 100%
      path
        fill #f6f3ef
  .textBlock
    position relative
    background #f6f3ef
    max-width 1366px
    margin 0 auto
    padding 70px
    +mq(0, 480px)
      height auto
      max-height 65%
      overflow-y auto
      padding 49px 0
    .CPCblock
      padding 70px
      background-image url('../assets/images/cpc_bg.svg')
      background-repeat no-repeat
      background-position center
      background-size contain
      opacity 1
      transition opacity 0.3s 0.5s ease-in
      &.hide
        transition opacity 0.3s 0.5s ease-in
        opacity 0
      +mq(1050px)
        background-size 60%
      +mq(0, 480px)
        padding 0 53px
        background-size 170%

    .title
      font-family BanderaProBold
      color #3d4574
      font-size 34px
      font-weight 700
      line-height 38px
      text-align center
      padding 13px 0 67px 0
      opacity 1
      will-change opacity
      &.hide
        opacity 0
      +mq(481px,849px)
        font-size 30px
        line-height 34px
      +mq(0, 480px)
        font-size 22px
        line-height 26px
    .text
      font-family BanderaPro
      color #242424
      font-size 18px
      font-weight 400
      line-height 26px
      text-align center
      padding-bottom 60px
      will-change opacity
      &.hide
        opacity 0
      +mq(768px,849px)
        font-size 16px
        line-height 22px
      +mq(481px,767px)
        font-size 16px
        line-height 22px
      +mq(0, 480px)
        font-size 12px
        line-height 17px
    .button
      position relative
      width 200px
      height 50px
      box-sizing border-box
      margin 20px auto 0 auto
      transform-origin 50% 0%
      transform scaleX(1)
      will-change transform
      &.tap
        .buttonHolder:before
          transform scaleX(1) !important
      &:active, &:hover
        .buttonHolder:before
          transform scaleX(1)
          +mq(0, 770px)
            transform scaleX(0)
      +mq(0, 480px)
        width 170px
      .buttonHolder
        transition transform 0.3s
        width 100%
        height 100%
        background #cd2430
        will-change transform
        transform skew(-45deg) scaleX(0)
        display inline-block
        vertical-align middle
        box-shadow 0 0 1px rgba(0, 0, 0, 0)
        -webkit-backface-visibility hidden
        backface-visibility hidden
        -moz-osx-font-smoothing grayscale
        position relative
        z-index -1
        top 0
        bottom 0
        left 0
        right 0
        transform-origin 50%
        transition-timing-function ease-out
        &.showBG
          transform skew(-45deg) scaleX(1)
          transition-delay 0.5s
        &:before
          content ""
          position absolute
          z-index -1
          top 0
          bottom 0
          left 0
          right 0
          background #3d4574
          transform scaleX(0)
          transform-origin 50%
          transition-property transform
          transition-duration 0.3s
          transition-timing-function ease-out
      button
        opacity 1
        position absolute
        width 100%
        height 100%
        border none
        box-shadow none
        border-radius 0
        z-index 9
        background none
        font-family BanderaProBold
        color #f6f3ef
        font-size 18px
        font-weight 700
        text-align center
        transition opacity 0.3 ease
        +mq(0, 480px)
          font-size 14px
  [data-anim-popup="0"]
    transition opacity 0.4s 0.5s ease, margin 0.4s 0.5s ease
  [data-anim-popup="1"]
    transition all 0.4s
    transition-delay 0.5s
  [data-anim-popup="2"]
    transition all 0.4s
    transition-delay 0.5s
  [data-anim-popup="3"]
    transition all 0.4s
    transition-delay 0.5s
