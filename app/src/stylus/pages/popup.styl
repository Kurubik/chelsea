.popupContainer
  position fixed
  width 100%
  height 100%
  background rgba(36, 36, 36, 0.5)
  z-index 9999
  display none
  &.show
    display block
  .Block
    transition all 0.3s
    max-width 1280px
    margin 0 auto
    position absolute
    width 100%
    top -1000px
    will-change top
    left 0
    right 0
    &.show
      transition all 0.3s
      top 0
  .closePopup
    cursor pointer
    width 26px
    height 25px
    margin 5% 40px 40px auto
    svg
      width 100%
      height 100%
      path
        fill #f6f3ef
  .textBlock
    background #f6f3ef
    max-width 1140px
    margin 0 auto
    padding 70px
    .title
      font-family BanderaProBold
      color #3d4574
      font-size 34px
      font-weight 700
      line-height 38px
      text-align center
      padding 13px 0 67px 0
    .text
      font-family BanderaPro
      color #242424
      font-size 18px
      font-weight 400
      line-height 26px
      text-align center
      padding-bottom 60px
    .button
      position relative
      width 200px
      height 50px
      box-sizing border-box
      margin 20px auto 0 auto
      &:hover
        .buttonHolder
          transition all 0.3s
          opacity 0.8
      .buttonHolder
        transition all 0.3s
        width 100%
        height 100%
        background #cd2430
        transform skew(-45deg)
      button
        position absolute
        width 100%
        height 100%
        border none
        box-shadow none
        border-radius 0
        z-index 9
        background none
        font-family BanderaProBold
        color #f6f3ef
        font-size 18px
        font-weight 700
        text-align center