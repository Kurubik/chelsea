.about
  background-image url('../assets/images/company.jpg')
  height 800px
  background-size cover
  background-repeat no-repeat
  background-position center
  overflow hidden
  +mq(720px, 800px)
    background-position 69% 100%
    background-size 172%
  +mq(0, 480px)
    background-size 160%
    background-position 80% 0
    height 590px
  .titleText
    position relative
    z-index 9
    font-family BanderaProBold
    font-size 150px
    font-weight 700
    line-height 100px
    text-align left
    margin 0 0 -3px 70px
    padding-top 330px
    will-change transform
    &.hide
      transform translateX(-1000px)
    +mq(850px,1170px)
      font-size 130px
      line-height 85px
    +mq(481px,849px)
      margin 0 0 -3px 45px
      font-size 110px
      line-height 75px
      padding-top 360px
    +mq(0, 480px)
      margin 0 0 0 29px
      padding-top 243px
      font-size 55px
      line-height 35px
      [lang="ru"] &
        margin 0 0 0 20px
        padding-top 252px
        font-size 47px
        line-height 30px
    .titleRed
      color #cd2430
    .titleWhite
      color #f6f3ef
      margin-left 0
      will-change margin
      &.hide
        margin-left -250px
  .textContainer
    position relative
    left 0
    will-change transform
    &.hide
      transform translateX(2000px)
      +mq(0, 480px)
        transform translateX(0)
    .aboutText
      position absolute
      font-family BanderaPro
      color #f6f3ef
      font-size 16px
      font-weight 400
      line-height 210px
      text-align center
      width 900px
      height 210px
      box-sizing border-box
      padding 0 20px 0 10px
      z-index 9
      left 0
      right 0
      margin 0 auto
      min-width 320px
      opacity 1
      will-change opacity
      [lang="ru"] &
        font-size 15px
        +mq(850px,1170px)
          font-size 14px
        +mq(768px,849px)
          font-size 14px
        +mq(481px,767px)
          font-size 14px
        +mq(0, 480px)
          padding 0 35px
          font-size 11px
      span
        display inline-block
        line-height 24px
        vertical-align middle
        +mq(850px,1170px)
          line-height 23px
        +mq(768px,849px)
          line-height 20px
        +mq(481px,767px)
          line-height 20px
        +mq(0, 480px)
          line-height 17px
      &.hide
        opacity 0
      +mq(850px,1170px)
        width 100%
        font-size 15px
        padding 0 120px 0 90px
      +mq(481px,849px)
        width 100%
        font-size 14px
        padding 0 80px 0 90px
      +mq(0, 480px)
        height 279px
        line-height 279px
        width 100%
        padding 0 54px
        font-size 12px
    .textHolder
      display block
      opacity 0.8
      height 210px
      width 919px
      transform skew(-45deg)
      background-color #3d4574
      margin 0 0 0 20%
      +mq(850px,1170px)
        width 878px
        margin 0 0 0 15%
      +mq(481px,849px)
        width 708px
        margin 0 0 0 14%
      +mq(0, 480px)
        width 100%
        height 279px
        transform skew(0deg)
        margin 0
        opacity 1

  [data-anim-about="0"]   //title text
    transition all 1s
  [data-anim-about="1"]   //white text
    transition all 1s
    transition-delay 0.2s
  [data-anim-about="2"]   //blue container
    transition all 1s
  [data-anim-about="3"]   //text in container
    transition all 1s
    transition-delay 1s
    +mq(0px,770px)
      transition-delay 0s
  [data-anim-about="4"]   //scroll stuff
    transition all 1s
    transition-delay 1s
    +mq(0px,770px)
      transition-delay 0s