.services
  background-color #747371
  .servicesHeader
    height 440px
    box-sizing border-box
    padding 118px 0
    .titleText
      font-family BanderaProBold
      font-size 150px
      font-weight 700
      line-height 100px
      text-align center
      .titleRed
        color #cd2430
      .titleWhite
        color #f6f3ef
  .blocks
    width 1080px
    height 1080px
    margin 0 auto
    display flex
    flex-wrap wrap
    .block
      display inline-block
      width 360px
      height 360px
      position relative
      z-index 9
      &.back
        background-color #747371
      &.blue
        background-color #3d4574
      &.red
        background-color #cd2430
      .topTriangle
        position absolute
        display inline-block
        height 0
        width 0
        &.red
          border-top 360px solid #cd2430
          border-right 360px solid transparent
        &.blue
          border-top 360px solid #3d4574
          border-right 360px solid transparent
      .bottomTriangle
        position absolute
        display inline-block
        height 0
        width 0
        &.blue
          border-bottom 360px solid #3d4574
          border-left 360px solid transparent
        &.red
          border-bottom 360px solid #cd2430
          border-left 360px solid transparent
      .text
        font-family BanderaProBold
        color #f6f3ef
        font-size 24px
        font-weight 700
        line-height 28px
        text-align center
        position relative
      .icon
        position relative
        width 99px
        height 106px
        display block
        margin 46px auto 48px auto
        svg
          width 100%
          height 100%
          path, polygon
            fill #f6f3ef
      .button
        cursor pointer
        position absolute
        bottom 40px
        left 0
        right 0
        margin 0 auto
        width 26px
        height 21px
        transform rotate(180deg)
        svg
          width 100%
          height 100%
          path, polygon
            fill #f6f3ef
