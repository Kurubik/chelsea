.top
  background-image url('../assets/images/top.jpg')
  height 850px
  background-size cover
  background-repeat no-repeat
  background-position center
  +mq(0, 480px)
    height 560px
  .fullLogo
    display block
    padding 83px 0 0 0
    margin 0 auto
    width 252px
    height 153px
    +mq(0, 480px)
      padding 50px 0 0 0
      width 167px
      height 101px
    svg
      width 100%
      height 100%
  .menuContainer
    position relative
    margin 265px 0 0 0
    transform rotateX(0)
    transform-origin 50% 100%
    &.hide
      transform rotateX(90deg)
    +mq(0, 480px)
      margin 160px 0 0 0
    .menuHolder
      display block
      opacity 0.8
      height 0
      border-bottom 50px solid #3d4574
      border-left 50px solid transparent
      border-right 50px solid transparent
      width 1100px
      margin 0 auto
      +mq(850px,1170px)
        width 700px
      +mq(768px,849px)
        width 608px
      +mq(481px,767px)
        width 445px
      +mq(0, 480px)
        width 235px
    .menu
      position absolute
      list-style none
      z-index 2
      width 610px
      left 0
      right 0
      margin 0 auto
      padding-top 12px
      opacity 1
      &.hide
        opacity 0
      +mq(850px,1170px)
        width 575px
      +mq(768px,849px)
        width 485px
      +mq(481px,767px)
        width 450px
      +mq(0, 480px)
        display none
      li
        display inline-block
        padding-left 60px
        +mq(850px,1170px)
          padding-left 60px
        +mq(768px,849px)
          padding-left 50px
        +mq(481px,767px)
          padding-left 40px
        &:first-child
          padding-left 0
        a
          font-family BanderaProBold
          color #f6f3ef
          font-size 18px
          font-weight 700
          line-height 26px
          text-align center
          transition all 0.3s
          text-decoration none
          +mq(850px,1170px)
            font-size 16px
          +mq(768px,849px)
            font-size 14px
          +mq(481px,767px)
            font-size 14px
          &.light
            color #cd2430
            transition all 0.3s
          &:hover
            color #cd2430
            transition all 0.3s
  .menuButton
    display none
    margin 0 auto
    width 21px
    height 11px
    position absolute
    left 0
    right 0
    margin-top 15px
    z-index 9
    opacity 1
    &.hide
      opacity 0
    &:hover
      .border-menu
        div
          &.line-top
            top -1px
          &.line-middle
            top 6px
          &.line-bottom
            top 14px
    .border-menu
      width 100%
      height 100%
      div
        position relative
        width 100%
        height 2px
        background #f6f3ef
        transition all 0.3s
        &.line-top
          top 3px
        &.line-middle
          top 6px
        &.line-bottom
          top 9px
    svg
      width 100%
      height 100%
      path
        fill #f6f3ef
    +mq(0, 480px)
      display block
  .textContainer
    position relative
    transform rotateX(0)
    transform-origin 0% 0%
    overflow hidden
    &.hide
      transform rotateX(-90deg)
    .topText
      position absolute
      display inline-block
      box-sizing border-box
      padding 40px 0
      font-family BanderaPro
      color  #f6f3ef
      font-size 18px
      font-weight 400
      line-height 26px
      text-align center
      z-index 2
      width 800px
      height 170px
      left 0
      right 0
      margin 0 auto
      min-width 320px
      opacity 1
      &.hide
        opacity 0
      +mq(850px,1170px)
        font-size 15px
        width 100%
        padding 40px 140px
      +mq(768px,849px)
        font-size 15px
        width 100%
        padding 40px 140px
      +mq(481px,767px)
        font-size 15px
        width 100%
        padding 30px
      +mq(0, 480px)
        width 100%
        padding 35px 53px
        font-size 14px
        line-height 19px
        height 200px
    .textHolder
      display block
      opacity 1
      height 0
      border-top 170px solid #cd2430
      border-left 200px solid transparent
      border-right 200px solid transparent
      width 800px
      margin 0 auto
      +mq(850px,1170px)
        width 560px
        border-left 120px solid transparent
        border-right 120px solid transparent
      +mq(768px,849px)
        width 468px
        border-left 120px solid transparent
        border-right 120px solid transparent
      +mq(481px,767px)
        width 305px
        border-left 120px solid transparent
        border-right 120px solid transparent
      +mq(0, 480px)
        width 100%
        height 200px
        border none
        opacity 1
        background #cd2430

  [data-anim-top="0"]         //menu container
    transition all 0.7s
  [data-anim-top="1"]         //text container
    transition all 1s
    transition-delay 0.3s
  [data-anim-top="2"]         //menu
    transition all 0.5s
    transition-delay 0.3s
  [data-anim-top="3"]         //text
    transition all 0.5s
    transition-delay 0.5s
  [data-anim-top="4"]         //scroll stuff
    transition all 0.5s
    transition-delay 0.7s