.top
  background-image url('../assets/images/top.jpg')
  height 850px
  background-size cover
  background-repeat no-repeat
  background-position center
  .fullLogo
    display block
    padding 83px 0 0 0
    margin 0 auto
    width 252px
    height 153px
    svg
      width 100%
      height 100%
  .menuContainer
    margin 265px 0 0 0
    .menuHolder
      display block
      opacity 0.8
      height 0
      border-bottom 50px solid #3d4574
      border-left 50px solid transparent
      border-right 50px solid transparent
      width 1100px
      margin 0 auto
      +mq(850px,1170px)
        width 700px
      +mq(768px,849px)
        width 608px
    .menu
      position absolute
      list-style none
      z-index 2
      width 610px
      left 0
      right 0
      margin 0 auto
      padding-top 12px
      +mq(850px,1170px)
        width 575px
      +mq(768px,849px)
        width 485px
      li
        display inline-block
        padding-left 60px
        +mq(850px,1170px)
          padding-left 60px
        +mq(768px,849px)
          padding-left 50px
        &:first-child
          padding-left 0
        a
          font-family BanderaProBold
          color #f6f3ef
          font-size 18px
          font-weight 700
          line-height 26px
          text-align center
          transition all 0.3s
          text-decoration none
          +mq(850px,1170px)
            font-size 16px
          +mq(768px,849px)
            font-size 14px
          &:hover
            color #cd2430
            transition all 0.3s
  .textContainer
    .topText
      position absolute
      display inline-block
      box-sizing border-box
      padding 40px 0
      font-family BanderaPro
      color  #f6f3ef
      font-size 18px
      font-weight 400
      line-height 26px
      text-align center
      z-index 2
      width 800px
      height 170px
      left 0
      right 0
      margin 0 auto
      +mq(850px,1170px)
        font-size 15px
        width 100%
        padding 40px 140px
      +mq(768px,849px)
        font-size 15px
        width 100%
        padding 40px 140px
    .textHolder
      display block
      opacity 0.8
      height 0
      border-top 170px solid #cd2430
      border-left 200px solid transparent
      border-right 200px solid transparent
      width 800px
      margin 0 auto
      +mq(850px,1170px)
        width 560px
        border-left 120px solid transparent
        border-right 120px solid transparent
      +mq(768px,849px)
        width 468px
        border-left 120px solid transparent
        border-right 120px solid transparent