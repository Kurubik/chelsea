*
  margin 0
  padding 0
  &:focus
    outline none

html,
body
  width  100%
  height auto

.container
  width 100%
  height auto
  background-image url('../assets/images/bg/pattern.png')
  background-attachment fixed

.wrapper
  max-width 1366px
  width 100%
  margin 0 auto
  .centerContainer
    max-width 1280px
    width 100%
    height 100%
    margin 0 auto
.scrollDown
  display block
  width 27px
  height 39px
  left 0
  right 0
  margin 0 auto
  position absolute
  margin-top -9px
  &.second
    margin-top -10px
  &.third
    margin-top -13px
  &.up
    transform rotate(180deg)
  &.last
    bottom 40px
    left 50px
    margin 0
  svg
    width 100%
    height 100%
    path, polygon
      fill #f6f3ef

.footer
  height 200px
  background-color #f6f3ef
  box-sizing border-box
  vertical-align middle
  padding 75px 0
  width 100%
  .footerContainer
    width 100%
    max-width 1180px
    margin 0 auto
    .address
      vertical-align middle
      display inline-block
      font-family BanderaProBold
      color #242424
      font-size 16px
      font-weight 700
      line-height 22px
      text-align left
      width 260px
      margin 0 5px 0 0
    .phone
      width 350px
      margin 0 50px 0 0
      vertical-align middle
      display inline-block
      font-family BanderaPro
      color #242424
      font-size 16px
      font-weight 400
      line-height 22px
      text-align left
    .ltd
      vertical-align middle
      display inline-block
      font-family BanderaPro
      color #747371
      font-size 12px
      font-weight 400
      line-height 26px
      text-align right
      .icon
        vertical-align middle
        display inline-block
        width 16px
        height 20px
        margin 0 0 0 31px
        svg
          width 100%
          height 100%
          path, polygon
            fill #cd2430
    .social
      display inline-block
      margin 0 0 0 73px
      .socialList
        vertical-align middle
        list-style none
        display inline-block
        li
          display inline-block
          width 50px
          height 50px
          border 1px solid #747371
          box-sizing border-box
          padding 15px
          &:first-child
            border-right none
          a
            width 100%
            height 100%
            svg
              width 100%
              height 100%
              path, polygon
                fill #242424
