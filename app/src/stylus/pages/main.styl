*
  margin 0
  padding 0
  &:focus
    outline none

html,
body
  width  100%
  height auto

.container
  width 100%
  height auto
  background-image url('../assets/images/bg/pattern.png')
  background-attachment fixed
  overflow hidden
  min-width 320px

.wrapper
  max-width 1366px
  width 100%
  margin 0 auto
  .centerContainer
    max-width 1280px
    width 100%
    height 100%
    margin 0 auto
.scrollDown
  display block
  width 27px
  height 39px
  left 0
  right 0
  margin 0 auto
  position absolute
  margin-top -9px
  +mq(0, 699px)
    width 21px
    height 31px
  &.second
    margin-top -10px
  &.third
    margin-top -13px
  &.up
    transform rotate(180deg)
  &.last
    bottom 40px
    left 50px
    margin 0
    +mq(0, 699px)
      bottom 20px
      left 0
      right 0
      margin 0 auto
  svg
    width 100%
    height 100%
    path, polygon
      fill #f6f3ef

.footer
  height 200px
  background-color #f6f3ef
  box-sizing border-box
  vertical-align middle
  padding 75px 0
  width 100%
  +mq(768px,979px)
    height 180px
    padding 50px 0 96px 0
  +mq(700px,767px)
    height 180px
    padding 50px 0 96px 0
  +mq(0, 699px)
    height 340px
    padding 50px 45px 29px 45px
  .footerContainer
    width 100%
    max-width 1180px
    margin 0 auto
    position relative
    +mq(980px,1170px)
      max-width 950px
    +mq(768px,979px)
      max-width 670px
    +mq(700px,767px)
      max-width 670px
    +mq(0, 699px)
      max-width 100%
      text-align center
    .address
      vertical-align middle
      display inline-block
      font-family BanderaProBold
      color #242424
      font-size 16px
      font-weight 700
      line-height 22px
      text-align left
      width 260px
      margin 0 5px 0 0
      +mq(980px,1170px)
        font-size 14px
        line-height 20px
      +mq(768px,979px)
        width 235px
        font-size 14px
        line-height 20px
      +mq(700px,767px)
        width 235px
        font-size 14px
        line-height 20px
      +mq(0, 699px)
        text-align center
        margin 0 0 16px 0
        width 100%
    .phone
      width 350px
      margin 0 50px 0 0
      vertical-align middle
      display inline-block
      font-family BanderaPro
      color #242424
      font-size 16px
      font-weight 400
      line-height 22px
      text-align left
      +mq(980px,1170px)
        font-size 14px
        line-height 20px
        width 200px
      +mq(768px,979px)
        font-size 14px
        line-height 20px
        width 200px
      +mq(700px,767px)
        font-size 14px
        line-height 20px
        width 200px
      +mq(0, 699px)
        text-align center
        margin 0 0 27px 0
        width 100%
    .ltd
      vertical-align middle
      display inline-block
      font-family BanderaPro
      color #747371
      font-size 12px
      font-weight 400
      line-height 26px
      text-align right
      +mq(768px,979px)
        position absolute
        top 75px
        right 0
      +mq(700px,767px)
        position absolute
        top 75px
        right 0
      +mq(0, 699px)
        position absolute
        top 205px
        left 0
        right 0
        margin 0 auto
        text-align center
      .icon
        vertical-align middle
        display inline-block
        width 16px
        height 20px
        margin 0 0 0 31px
        +mq(0, 699px)
          position absolute
          left 0
          right 0
          margin 0 auto
          top 40px
        svg
          width 100%
          height 100%
          path, polygon
            fill #cd2430
    .social
      display inline-block
      margin 0 0 0 73px
      +mq(980px,1170px)
        margin 0 0 0 40px
      +mq(768px,979px)
        margin 0
        position absolute
        top 0
        right 0
      +mq(700px,767px)
        margin 0
        position absolute
        top 0
        right 0
      +mq(0, 699px)
        display block
        margin 0
      .socialList
        vertical-align middle
        list-style none
        display inline-block
        li
          display inline-block
          width 50px
          height 50px
          border 1px solid #747371
          box-sizing border-box
          padding 15px
          &:first-child
            border-right none
          a
            position absolute
            width 50px
            height 50px
            margin -15px 0 0 -15px
          svg
            width 100%
            height 100%
            path, polygon
              fill #242424
