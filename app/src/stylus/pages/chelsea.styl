.chelsea
  background-image url('../assets/images/london.jpg')
  height 800px
  background-size cover
  background-repeat no-repeat
  .titleText
    display inline-block
    font-family BanderaProBold
    font-size 150px
    font-weight 700
    line-height 100px
    text-align right
    margin 297px 0 0 45%
    z-index 9
    position relative
    .titleRed
      color #cd2430
    .titleWhite
      color #f6f3ef
  .textContainer
    margin-top -4px
    .chelseaText
      font-family BanderaPro
      color #f6f3ef
      font-size 16px
      font-weight 400
      line-height 24px
      text-align center
      position absolute
      z-index 9
      left 0
      right 0
      margin 0 auto
      width 900px
      padding-top 57px
    .textHolder
      display inline-block
      opacity 0.8
      height 210px
      width 919px
      transform skew(45deg)
      background-color #cd2430
      margin-left 8%