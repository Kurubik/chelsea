.menu
  position fixed
  width 100%
  max-width 1366px
  z-index 99
  +mq(768px,979px)
    max-width 100%
  +mq(0, 767px)
    max-width 100%
  .aboutHeader
    display block
    width 100%
    margin 0 auto
    box-sizing border-box
    padding 40px 0
    position relative
    +mq(0, 480px)
      padding 30px 0 0 0
    &.open
      background #f6f3ef
      +mq(0, 767px)
        height 240px
      .aboutLogo
        display none
      .aboutLogoOpen
        display inline-block
      .menuContainer
        display block
    .aboutLogoOpen
      cursor pointer
      display none
      margin-left 50px
      vertical-align middle
      width 50px
      height 30px
      +mq(768px,979px)
        margin-left 40px
      +mq(0, 767px)
        margin-left 30px
      svg
        width 100%
        height 100%
    .aboutLogo
      cursor pointer
      margin-left 50px
      display inline-block
      vertical-align middle
      width 50px
      height 30px
      +mq(768px,979px)
        margin-left 40px
      +mq(0, 767px)
        display none
      svg
        width 100%
        height 100%
        rect
          fill #f6f3ef
    .aboutMenu
      cursor pointer
      float right
      margin-right 50px
      margin-top 9px
      display block
      width 26px
      height 13px
      +mq(768px,979px)
        margin-right 40px
      +mq(0, 767px)
        margin-right 30px
        width 21px
        height 11px
      svg
        width 100%
        height 100%
        path
          fill #f6f3ef
    .menuContainer
      display none
      .headerMenu
        position absolute
        list-style none
        z-index 2
        width 610px
        left 0
        right 0
        margin 0 auto
        padding-top 12px
        margin-top -38px
        +mq(768px,979px)
          width 488px
        +mq(0, 767px)
          width 100%
          text-align right
        li
          display inline-block
          padding-left 60px
          +mq(768px,979px)
            padding-left 50px
          +mq(0, 767px)
            display block
            padding-left 0
            padding-right 45px
          &:first-child
            padding-left 0
          a
            font-family BanderaProBold
            color #242424
            font-size 18px
            font-weight 700
            line-height 26px
            text-align center
            transition all 0.3s
            text-decoration none
            +mq(768px,979px)
              font-size 14px
            +mq(0, 767px)
              font-size 16px
              line-height 34px
            &:hover
              color #cd2430
              transition all 0.3s