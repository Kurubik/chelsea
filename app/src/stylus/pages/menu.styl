.menu
  position fixed
  width 100%
  max-width 1366px
  z-index 99
  background-color rgba(0,0,0,0)
  transition 0.5s
  transition-delay 0.2s
  will-change height, background
  &.hide
    transform translateY(-110px)
    +mq(0, 767px)
      transform translateY(-240px)
  &.open
    height 100%
    background-color rgba(0,0,0,0.7)
    .aboutHeader
      .aboutLogo
        margin-left -50px
        transition 0.5s
      .aboutMenu
        margin-right -50px
        transition 0.5s
      .menuContainer
        .headerMenu
          height 110px
          padding 40px 0
  +mq(768px,979px)
    max-width 100%
  +mq(0, 767px)
    max-width 100%
  .aboutHeader
    display block
    width 100%
    margin 0 auto
    box-sizing border-box
    padding 40px 0
    position relative
    overflow hidden
    +mq(0, 767px)
      overflow visible
    +mq(0, 480px)
      padding 30px 0 0 0
    &.open
      .aboutLogoOpen
        opacity 1
        transition-delay 0.5s
      .menuContainer
        display block
    .aboutLogoOpen
      transition-delay 0.7s
      cursor pointer
      display inline-block
      opacity 0
      position absolute
      z-index 22
      top 40px
      left 50px
      vertical-align middle
      width 50px
      height 30px
      transition opacity 0.5s
      will-change opacity
      +mq(768px,979px)
        margin-left 40px
      +mq(0, 767px)
        margin-left 30px
      svg
        width 100%
        height 100%
        transition all 0.5s
        rect
          transition all 0.5s
    .aboutLogo
      transition-delay 0.4s
      cursor pointer
      margin-left 50px
      display inline-block
      vertical-align middle
      width 50px
      height 30px
      transition 0.5s
      +mq(768px,979px)
        margin-left 40px
      +mq(0, 767px)
        display none
      svg
        width 100%
        height 100%
        rect
          fill #f6f3ef
    .aboutMenu
      cursor pointer
      float right
      margin-right 50px
      margin-top 9px
      display block
      width 26px
      height 20px
      transition 0.5s
      +mq(768px,979px)
        margin-right 40px
      +mq(0, 767px)
        margin-right 30px
        width 21px
        height 11px
      &:hover
        .border-menu
          div
            &.line-top
              top -1px
            &.line-middle
              top 6px
            &.line-bottom
              top 14px
      .border-menu
        width 100%
        height 100%
        div
          position relative
          width 100%
          height 2px
          background #f6f3ef
          transition all 0.3s
          &.line-top
            top 3px
          &.line-middle
            top 6px
          &.line-bottom
            top 9px
      svg
        width 100%
        height 100%
        transition all 0.3s
        path
          fill #f6f3ef
          transition all 0.3s
    .menuContainer
      position relative
      display block
      .headerMenu
        position absolute
        list-style none
        z-index 2
        width 100%
        overflow hidden
        text-align center
        height 0
        left 0
        right 0
        box-sizing border-box
        vertical-align middle
        margin 0 auto
        padding 0
        top -70px
        background #f6f3ef
        transition 0.5s
        transition-delay 0.2s
        will-change height
        &.open
          +mq(0, 767px)
            height 240px
        +mq(768px,979px)
          width 100%
        +mq(0, 767px)
          width 100%
          text-align right
        li
          display inline-block
          padding-left 60px
          +mq(768px,979px)
            padding-left 50px
          +mq(0, 767px)
            display block
            padding-left 0
            padding-right 45px
          &:first-child
            padding-left 0
          a
            font-family BanderaProBold
            color #242424
            font-size 18px
            font-weight 700
            line-height 26px
            text-align center
            transition all 0.3s
            text-decoration none
            will-change color
            +mq(768px,979px)
              font-size 14px
            +mq(0, 767px)
              font-size 16px
              line-height 34px
            &.light
              color #cd2430
              transition all 0.3s
            &:hover
              color #cd2430
              transition all 0.3s