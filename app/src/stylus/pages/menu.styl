.menu
  position fixed
  width 100%
  max-width 1366px
  z-index 99
  height 110px
  left 50%
  transform translateY(-110px) translateX(-50%)
  transition transform 0.5s ease
  transition-delay 0.2s
  will-change transform
  +mq(0, 767px)
    height 240px
    transform translateY(-240px) translateX(-50%)
  &.hide
    .aboutLogo
      transition transform 0.5s ease
      transform translateY(-240px) translateX(0)
    .aboutMenu
      transition transform 0.5s ease
      transform translateY(-240px) translateX(0)
  &:not(.hide)
    .aboutLogo
      transition transform 0.5s ease
      transform translateY(100px) translateX(0)
    .aboutMenu
      transition transform 0.5s ease
      transform translateY(100px) translateX(0)
  &.open
    overflow hidden
    transform translateY(0) translateX(-50%)
    transition transform 0.5s ease
    transition-delay 0.2s
    .aboutHeader
      .aboutLogo
        transform translateX(-150px) translateY(100px)
        transition transform 0.3s ease
      .aboutMenu
        transform translateX(150px) translateY(100px)
        transition transform  0.3s ease
      .aboutLogoOpen
        opacity 1
        transition opacity 0.5s ease
        transition-delay 0.5s
  .aboutHeader
    height 100%
    .aboutLogoOpen
      transition-delay 0.2s
      cursor pointer
      display inline-block
      opacity 0
      position absolute
      z-index 22
      top 40px
      left 50px
      vertical-align middle
      width 50px
      height 30px
      transition opacity 0.5s ease
      will-change opacity
      +mq(768px,979px)
        margin-left 40px
      +mq(0, 767px)
        margin-left 30px
      svg
        width 100%
        height 100%
        transition all 0.5s
        rect
          transition all 0.5s
    .aboutLogo
      cursor pointer
      display inline-block
      vertical-align middle
      width 50px
      height 30px
      transition transform 0.5s ease
      transition-delay 0.4s
      position absolute
      top 40px
      left 50px
      +mq(0, 767px)
        display none
      svg
        width 100%
        height 100%
        rect
          fill #f6f3ef
    .aboutMenu
      cursor pointer
      float right
      margin-top 6px
      display block
      width 26px
      height 20px
      transition transform 0.5s ease
      transition-delay 0.4s
      position absolute
      top 40px
      right 50px
      +mq(0, 767px)
        width 21px
        height 11px
      &:hover
        .border-menu
          div
            &.line-top
              transform translateY(-4px)
            &.line-middle
              top 6px
            &.line-bottom
              transform translateY(4px)
      .border-menu
        width 100%
        height 100%
        div
          position relative
          width 100%
          height 2px
          background #f6f3ef
          transition transform  0.3s ease
          will-change transform
          &.line-top
            top 3px
          &.line-middle
            top 6px
          &.line-bottom
            top 9px
      svg
        width 100%
        height 100%
        transition all 0.3s
        path
          fill #f6f3ef
          transition all 0.3s
    .menuContainer
      position relative
      display block
      height 100%
      .headerMenu
        position absolute
        list-style none
        z-index 2
        width 100%
        overflow hidden
        text-align center
        height 100%
        left 0
        right 0
        box-sizing border-box
        vertical-align middle
        margin 0 auto
        padding 40px 0
        background #f6f3ef
        +mq(768px,979px)
          width 100%
        +mq(0, 767px)
          width 100%
          text-align right
        li
          display inline-block
          padding-left 60px
          +mq(768px,979px)
            padding-left 50px
          +mq(0, 767px)
            display block
            padding-left 0
            padding-right 45px
          &:first-child
            padding-left 0
          a
            font-family BanderaProBold
            color #242424
            font-size 18px
            font-weight 700
            line-height 26px
            text-align center
            transition all 0.3s
            text-decoration none
            will-change color
            +mq(768px,979px)
              font-size 14px
            +mq(0, 767px)
              font-size 16px
              line-height 34px
            &.light
              color #cd2430
              transition all 0.3s
            &:hover
              color #cd2430
              transition all 0.3s